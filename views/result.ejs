<%- include("header"); -%>

<div class="container-fluid">
  <div class="title-result">
    <h2>Cross-Connect Records for <%= valueOfData %> </h2>
  </div>
  <div class="download-csv-button">
    <!-- <form action="/downloadSearch" method="get"> -->
      <button type="button" class="btn btn-outline-primary"><a href="/downloadSearch">Download CSV</a></button>
    <!-- </form> -->
  </div>

  <table class="table">
    <thead class="table-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Carrier</th>
        <th scope="col">Bandwidth (Gbps)</th>
        <th scope="col">Patch-Panel</th>
        <th scope="col">Patch-Panel Port</th>
        <th scope="col">Device</th>
        <th scope="col">Interface</th>
        <th scope="col">AZ</th>
        <th scope="col">Cluster</th>
        <th scope="col">Ticket</th>
      </tr>
    </thead>
    <tbody>



      <% connection.forEach(function(ckt){ %>

      <tr class="hoverTable">
        <th><%= ckt._circuit %> </th>
        <td><%= ckt.serviceprovider %></td>
        <td><%= ckt.bandwidth %></td>
        <td><%= ckt.patchpanel %></td>
        <td><%= ckt.patchpanelport %></td>
        <td><%= ckt.device %></td>
        <td><%= ckt.interface %></td>
        <td><%= ckt.az %></td>
        <td><%= ckt.cluster %></td>
        <td><%= ckt.ticket %></td>
      </tr>

      <% }); %>

    </tbody>
  </table>
</div>
