<%- include("partials/header.ejs"); -%>


<div class="body">
  <div class="body-content">
    <h2 class="title">Cross-Connect Report</h2>
    <p class="text-secondary"><%= skyrimPhrases %></p>
    <form action="/generatereport" method="post">

      <div class="row">
        <label for="">Select either Cluster or AZ to generate a cross-connect report.</label>
        <select class="form-control" name="queryClusterAZ" autofocus="true">
          <option value="az">AZ</option>
          <option value="cluster">Cluster</option>
        </select>
      </div>

      <div class="row">
        <label for="">Type in the AZ or Cluster for your report:</label>
        <input class="form-control" type="text" name="inputForm" placeholder="" autocomplete="off" required>
      </div>

      <button class="searchButton btn btn-secondary btn-lg btn-block" type="submit" name="button">Download Report</button>
    </form>
  </div>





  <%- include("partials/footer.ejs"); -%>
